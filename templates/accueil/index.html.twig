    {% block stylesheets %}
    <style>
        /* Global styles */
        body {
            font-family: 'Helvetica', sans-serif;
            background-color: #fff;
            margin: 0;
            padding: 0;
            overflow: hidden; /* Prevent scrolling to ensure the background video stays in place */
        }

        /* Navbar styles */
        .navbar {
            display: flex;
            align-items: center;
            padding: 15px 30px;
            position: fixed;
            top: 0;
            left: 0;
            right: 0;
            z-index: 100000000;
        }

        .navbar-brand {
            font-size: 2rem;
            font-weight: bold;
            color: #222;
            text-decoration: none;
            letter-spacing: 2px;
            text-transform: uppercase;
        }

        .navbar-nav {
            display: flex;
            margin-left: auto;
        }

        .nav-item {
            margin-right: 20px;
        }

        .nav-link {
            color: #f1f1f1;
            font-size: 1.1rem;
            text-transform: uppercase;
            font-weight: 500;
            transition: color 0.3s ease, transform 0.3s ease;
        }

        .nav-link:hover {
            color: #f1f1f1;
            transform: translateY(-2px);
        }

        /* Background video section */
        .background-video-container {
            position: fixed;
            top: 0;
            left: 0;
            width: 100%;
            height: 100%;
            z-index: -1; /* Ensure video stays in the background */
            overflow: hidden;
        }

        #background-video {
            width: 100%;
            height: 100%;
            object-fit: cover; /* Make sure the video covers the full screen */
        }

        .main-section {
            position: relative;
            height: 100vh; /* Full viewport height */
            display: flex;
            justify-content: space-between;
            z-index: 1;
        }

        .video-section {
            flex: 1;
            position: relative;
        }

        .content-text {
            position: absolute;
            top: 50%;
            left: 50%;
            transform: translate(-50%, -50%);
            color: white;
            text-align: center;
            z-index: 1;
        }

        .content-text h1 {
            font-size: 3rem;
            font-weight: bold;
        }

        .content-text p {
            font-size: 1.2rem;
        }

        .btn {
            color: #f1f1f1;
            padding: 10px 20px;
            font-size: 1rem;
            font-weight: bold;
            border: none;
            border-radius: 5px;
            cursor: pointer;
            transition: background-color 0.3s ease, transform 0.3s ease;
        }

    </style>
    {% endblock %}

</head>

