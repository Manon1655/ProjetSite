{% extends 'base.html.twig' %}

{% block title %}Réinitialisez votre mot de passe{% endblock %}

{% block body %}
    {% for flash_error in app.flashes('reset_password_error') %}
        <div class="alert alert-danger" role="alert">{{ flash_error }}</div>
    {% endfor %}
    
    <div class="reset-password-container">
        <h1 class="reset-title">Réinitialisez votre mot de passe</h1>

        <p class="reset-description">Entrez votre adresse email et nous vous enverrons un lien pour réinitialiser votre mot de passe.</p>

        {{ form_start(requestForm) }}
            <div class="form-group">
                {{ form_row(requestForm.email, { 'attr': {'class': 'form-control', 'placeholder': 'Votre adresse email'} }) }}
            </div>

            <div class="form-footer">
                <button type="submit" class="btn btn-primary">Envoyer le lien de réinitialisation</button>
            </div>
        {{ form_end(requestForm) }}
    </div>
{% endblock %}

{% block stylesheets %}
    <style>
        .reset-password-container {
            width: 100%;
            max-width: 500px;
            margin: 0 auto;
            padding: 20px;
            background-color: #f9f9f9;
            border-radius: 8px;
            box-shadow: 0 4px 6px rgba(0, 0, 0, 0.1);
        }

        .reset-title {
            font-size: 1.5em;
            text-align: center;
            color: #333;
            margin-bottom: 20px;
        }

        .reset-description {
            font-size: 1em;
            color: #666;
            text-align: center;
            margin-bottom: 20px;
        }

        .form-group {
            margin-bottom: 15px;
        }

        .form-control {
            font-size: 1em;
            padding: 10px;
            width: 100%;
            border-radius: 5px;
            border: 1px solid #ddd;
        }

        .form-footer {
            text-align: center;
        }

        .btn-primary {
            background-color:rgb(222, 111, 185);
            color: white;
            border: none;
            padding: 10px 20px;
            border-radius: 5px;
            font-size: 1em;
            cursor: pointer;
        }

        .btn-primary:hover {
            background-color:rgb(232, 127, 205);
        }

        .alert {
            margin-top: 15px;
            text-align: center;
        }
    </style>
{% endblock %}

