{% extends 'base.html.twig' %}

{% block title %}Modifiez votre mot de passe {% endblock %}

{% block body %}
    <style>
        body {
            background: #f9f9f9;
            font-family: Arial, sans-serif;
        }

        .form-container {
            max-width: 400px;
            margin: 50px auto;
            background: #ffffff;
            border-radius: 8px;
            padding: 20px;
            box-shadow: 0 4px 6px rgba(0, 0, 0, 0.1);
        }

        .form-container h1 {
            text-align: center;
            color: #333;
            margin-bottom: 20px;
        }

        .form-container form div {
            margin-bottom: 15px;
        }

        .form-container form div label {
            font-weight: bold;
            color: #555;
        }

        .form-container form input {
            width: 100%;
            padding: 10px;
            border: 1px solid #ddd;
            border-radius: 5px;
            font-size: 14px;
        }

        .form-container form input:focus {
            border-color: #007bff;
            outline: none;
        }

        .form-container .btn-primary {
            display: block;
            width: 100%;
            background-color: #007bff;
            color: white;
            border: none;
            padding: 10px;
            border-radius: 5px;
            font-size: 16px;
            cursor: pointer;
        }

        .form-container .btn-primary:hover {
            background-color: #0056b3;
        }

        .alert {
            margin-bottom: 20px;
            padding: 10px;
            border-radius: 5px;
            color: white;
        }

        .alert-success {
            background-color: #28a745;
        }

        .alert-error {
            background-color: #dc3545;
        }
    </style>

    <div class="form-container">
        <h1>Modifiez votre mot de passe</h1>

        {# Affichage des messages Flash #}
        {% for type, messages in app.flashes %}
            {% for message in messages %}
                <div class="alert alert-{{ type }}">{{ message }}</div>
            {% endfor %}
        {% endfor %}

        {{ form_start(resetForm) }}          
            {{ form_row(resetForm.plainPassword) }}
            <button class="btn btn-primary">Modifiez votre mot de passe</button>
        {{ form_end(resetForm) }}
    </div>
{% endblock %}

