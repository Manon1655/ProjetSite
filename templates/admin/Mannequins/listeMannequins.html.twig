{% extends 'base.html.twig' %}

{% block title %}Liste des Mannequins{% endblock %}

{% block stylesheets %}
    {{ parent() }}
    <style>
        .card {
            background-color: #f1f1f1f; 
            border: none;
            border-radius: 10px; 
            box-shadow: 0 12px 30px rgba(0, 0, 0, 0.15);
            transition: transform 0.3s ease, box-shadow 0.3s ease, background 0.3s ease; 
            overflow: hidden;
            position: relative;
            display: flex;
            flex-direction: column;
            height: auto; 
        }

        .card:hover {
            transform: translateY(-10px); 
            box-shadow: 0 20px 40px rgba(0, 0, 0, 0.2); 
            background: linear-gradient(135deg, rgba(255, 255, 255, 0.9), rgba(255, 255, 255, 0.7)); 
        }

        .card-title {
            font-size: 1.75rem;
            font-family: 'Georgia', serif;
            font-weight: bold;
            color: #090706;
            margin-bottom: 1rem;
            text-transform: uppercase;
            letter-spacing: 2px;
        }

        .card-subtitle {
            font-size: 1.2rem;
            font-family: 'Georgia', serif;
            color: #090706;
            margin-bottom: 1.25rem;
        }

        .card-text {
            font-size: 1.1rem;
            color: #090706;
            line-height: 1.8;
            font-family: 'Times New Roman', serif;
            margin-bottom: 1.75rem;
            flex-grow: 1; 
        }

        .card .btn {
            font-size: 0.95rem;
            padding: 0.6rem 1.2rem;
            text-transform: uppercase;
            letter-spacing: 1.2px;  
            border-radius: 0;  
            background-color: #090706; 
            border: none;
            color: #fff;
            font-weight: bold;
            transition: background-color 0.3s ease;
            margin-top: 10px;
            display: inline-block;
            width: 48%;
            text-align: center;
        }

        .card .btn:hover {
            background-color: #34495e;
        }

        .card-footer {
            display: flex;
            justify-content: space-between; 
            padding-top: 10px;
            padding-bottom: 15px;
            border-top: 1px solid #e3e3e3;
        }

        .card-img-container {
            width: 100%;
            height: auto;
            margin-bottom: 1.5rem;
            border: 5px solid #e3e3e3; 
            border-radius: 8px; 
            overflow: hidden;
            display: flex;
            justify-content: center; 
        }

        .card-img-container img {
            width: 100%;
            height: 100%;
            object-fit: cover;
            transition: transform 0.3s ease-in-out;
        }

        .card-img-container img:hover {
            transform: scale(1.1); 
        }

        .row-cols-lg-3 {
            display: grid;
            grid-template-columns: repeat(3, 1fr);
            gap: 2rem; 
            height: 100%; 
        }

        @media (max-width: 768px) {
            .row-cols-lg-3 {
                grid-template-columns: 1fr;
            }
        }

        @media (min-width: 769px) and (max-width: 991px) {
            .row-cols-md-2 {
                grid-template-columns: 1fr 1fr;
            }
        }

        h1 {
            font-family: 'Georgia', serif;
            color: #090706;
            font-size: 3rem;
            text-transform: uppercase;
            letter-spacing: 2px;
            margin-bottom: 2rem;
            text-align: center;
            font-weight: bold;
            padding: 20px 0;
            position: relative;
        }

        h1::after {
            content: '';
            position: absolute;
            bottom: 0;
            left: 50%;
            transform: translateX(-50%);
            width: 60%;
            height: 2px;
            background-color: #090706; 
            animation: lineAnimation 1.5s ease-in-out infinite;
        }

        @keyframes lineAnimation {
            0%, 100% {
                width: 60%;
            }
            50% {
                width: 100%;
            }
        }

        body {
            background-color: #f5f5f5;
            font-family: 'Arial', sans-serif;
            color: #333;
            margin: 0;
            padding: 0;
            transition: background-color 0.3s ease;
        }

        .container {
            margin: 50px auto;
            max-width: 1200px;
            padding: 30px;
        }

        .pagination {
            display: flex;
            justify-content: center;
            align-items: center;
            gap: 10px;
            list-style: none;
        }

        .pagination .page-item {
            margin: 0;
        }

        .pagination .page-link {
            color:rgb(0, 0, 0);
            background-color: #f8f9fa;
            border: 1px solid #ddd;
            padding: 8px 16px;
            border-radius: 5px;
            transition: background-color 0.3s;
        }

        .pagination .page-link:hover {
            background-color: #e3e3e3;
        }

        .pagination .page-item.active .page-link {
            background-color:rgb(0, 0, 0);
            color: white;
        }

        .navigation {
            margin-top: 20px;
            text-align: center;
        }

/* Style général pour le formulaire de recherche */
.search-bar {
    margin-bottom: 20px;
}

/* Style des champs de saisie */
.search-input {
    padding: 10px;
    font-size: 1rem;
    border-radius: 5px;
    border: 1px solid #ccc;
    width: 100%;
    box-sizing: border-box;
}

/* Style des labels */
.search-bar label {
    font-weight: bold;
    margin-bottom: 5px;
    font-size: 1rem;
    color: #333;
}

/* Style du bouton de recherche */
.search-button {
    width: auto;
    padding: 8px 15px;
    font-size: 0.9rem;
    border-radius: 5px;
    border: none;
    background-color:rgb(132, 120, 120);
    color: white;
    cursor: pointer;
    transition: background-color 0.3s;
}

/* Responsivité */
@media (max-width: 768px) {
    .search-bar {
        flex-direction: column;
    }

    .col-md-5, .col-md-2 {
        margin-bottom: 10px;
        width: 100%;
    }

    .search-button {
        width: 100%; /* Le bouton prendra toute la largeur sur les petits écrans */
        padding: 10px;
    }
}


    </style>

{% endblock %}

{% block body %}
<div class="container py-5">
    <h1 class="text-center text-primary mb-5">Liste des Mannequins</h1>
    
    {% if "ROLE_ADMIN" in app.user.roles %}
        <div class="d-flex justify-content-between align-items-center mb-5">
            <a href="{{ path('admin_mannequin_ajout') }}" class="btn btn-outline-primary btn-lg">
                <i class="fas fa-plus-circle me-2"></i> Ajouter un mannequin
            </a>
        </div>
  {% endif %}
{{ form_start(formFiltreMannequin) }}
<div class="row search-bar">
    <div class="col-md-5">
        <div class="form-group">
            {{ form_label(formFiltreMannequin.Nom, 'Nom') }}
            {{ form_widget(formFiltreMannequin.Nom, {'attr': {'class': 'form-control search-input'}}) }}
            {{ form_errors(formFiltreMannequin.Nom) }}
        </div>
    </div>
    <div class="col-md-5">
        <div class="form-group">
            {{ form_label(formFiltreMannequin.defile, 'Défilé') }}
            {{ form_widget(formFiltreMannequin.defile, {'attr': {'class': 'form-control search-input'}}) }}
        </div>
    </div>
    <div class="col-md-2 d-flex align-items-end">
        <button type="submit" class="btn btn-warning search-button">Rechercher</button>
    </div>
</div>
{{ form_end(formFiltreMannequin) }}


    <div class="row row-cols-1 row-cols-md-9 row-cols-lg-3 g-4">
        {% for lemannequin in lesmannequins %}
            {% if app.request.query.get('search') is not empty %}
                {% if lemannequin.Nom matches '/^' ~ app.request.query.get('search') ~ '/i' %}
                    <div class="col">
                        <div class="card shadow-lg border-0 rounded-4">
                            <div class="card-body">
                                <h5 class="card-title">{{ lemannequin.Nom }} - {{ lemannequin.Prenom }}</h5>
                                <div class="card-img-container">
                                    <img src="{{ lemannequin.imageMannequins }}" alt="Image de {{ lemannequin.Nom }}"/>
                                </div>
                                <p class="card-text">
                                    <strong>Nationalité:</strong> {{ lemannequin.Nationalite }}<br>
                                    <strong>Biographie:</strong> {{ lemannequin.biographieM }}<br>
                                    <strong>Défilés :</strong>
                                    <ul>
                                        {% for defile in lemannequin.defiles %}
                                            <li>{{ defile.nomD }}</li>
                                        {% endfor %}
                                    </ul>
                                </p>
                            </div>
                            {% if "ROLE_ADMIN" in app.user.roles %}
                                <div class="card-footer">
                                    <a href="{{ path('admin_mannequin_modif', {'id': lemannequin.id}) }}" class="btn btn-warning btn-sm">
                                        <i class="fas fa-pen"></i> Modifier
                                    </a>
                                    <a class="btn btn-danger btn-sm"
                                       data-bs-toggle="modal"
                                       data-bs-target="#modalSimple"
                                       data-titre="Suppression d'un mannequin"
                                       data-message="Êtes-vous sûr de vouloir supprimer le mannequin : {{ lemannequin.Nom }} ?"
                                       data-libelleBouton="Supprimer ce mannequin"
                                       href="{{ path('admin_mannequin_suppression', {'id': lemannequin.id}) }}">
                                        <i class="far fa-trash-alt"></i> Supprimer
                                    </a>
                                </div>
                            {% endif %}
                        </div>
                    </div>
                {% endif %}
            {% else %}
                <div class="col">
                    <div class="card shadow-lg border-0 rounded-4">
                        <div class="card-body">
                            <h5 class="card-title">{{ lemannequin.Nom }} - {{ lemannequin.Prenom }}</h5>
                            <div class="card-img-container">
                                <img src="{{ lemannequin.imageMannequins }}" alt="Image de {{ lemannequin.Nom }}"/>
                            </div>
                            <p class="card-text">
                                <strong>Nationalité:</strong> {{ lemannequin.Nationalite }}<br>
                                <strong>Biographie:</strong> {{ lemannequin.biographieM }}<br>
                                <strong>Défilés :</strong>
                                <ul>
                                    {% for defile in lemannequin.defiles %}
                                        <li>{{ defile.nomD }}</li>
                                    {% endfor %}
                                </ul>
                            </p>
                        </div>
                        {% if "ROLE_ADMIN" in app.user.roles %}
                            <div class="card-footer">
                                <a href="{{ path('admin_mannequin_modif', {'id': lemannequin.id}) }}" class="btn btn-warning btn-sm">
                                    <i class="fas fa-pen"></i> Modifier
                                </a>
                                <a class="btn btn-danger btn-sm"
                                   data-bs-toggle="modal"
                                   data-bs-target="#modalSimple"
                                   data-titre="Suppression d'un mannequin"
                                   data-message="Êtes-vous sûr de vouloir supprimer le mannequin : {{ lemannequin.Nom }} ?"
                                   data-libelleBouton="Supprimer ce mannequin"
                                   href="{{ path('admin_mannequin_suppression', {'id': lemannequin.id}) }}">
                                    <i class="far fa-trash-alt"></i> Supprimer
                                </a>
                            </div>
                        {% endif %}
                    </div>
                </div>
            {% endif %}
        {% endfor %}
    </div>
     <div class="d-flex justify-content-center mt-4">
        {{ knp_pagination_render(lesmannequins) }}
    </div>

{% endblock %}


