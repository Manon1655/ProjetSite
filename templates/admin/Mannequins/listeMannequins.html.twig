{% extends 'base.html.twig' %}

{% block title %}Liste des Mannequins{% endblock %}

{% block stylesheets %}
    {{ parent() }}
    <style>
        /* Style général du fond de la page */
        body {
            background-color: #f8f9fa; /* Gris clair pour un fond sobre */
            font-family: 'Helvetica Neue', sans-serif;
            color: #343a40;
        }

        /* Titre principal stylisé */
        h1 {
            font-family: 'Georgia', serif;
            color: #090706;
            font-size: 3rem;
            text-transform: uppercase;
            letter-spacing: 3px;
            margin-bottom: 2rem;
            text-align: center;
        }

        /* Card style amélioré */
        .card {
            background-color: #fff; /* Fond blanc élégant */
            border: none;
            border-radius: 15px; /* Coins arrondis pour une touche chic */
            box-shadow: 0 10px 25px rgba(0, 0, 0, 0.15); /* Ombre douce mais marquée */
            transition: transform 0.3s ease, box-shadow 0.3s ease; /* Animation fluide */
            overflow: hidden;
        }

        /* Effet de survol pour les cartes */
        .card:hover {
            transform: translateY(-10px); /* Légère élévation */
            box-shadow: 0 20px 50px rgba(0, 0, 0, 0.2); /* Ombre plus marquée */
            background: linear-gradient(135deg, rgba(255, 255, 255, 0.9), rgba(255, 255, 255, 0.7)); /* Dégradé élégant */
        }

        /* Effet de survol élégant avec des animations */
        .card:hover .card-body {
            background: rgba(255, 255, 255, 0.85); /* Légère transparence sur le texte */
        }

        /* Style des titres de cartes */
        .card-title {
            font-size: 1.5rem;
            font-weight: bold;
            color: #343a40;
            text-transform: uppercase;
            letter-spacing: 2px;
            margin-bottom: 1rem;
        }

        /* Style de la biographie et des détails */
        .card-text {
            font-size: 1.1rem;
            color: #6c757d;
            line-height: 1.6;
        }

        /* Détails de la nationalité */
        .card-subtitle {
            font-size: 1rem;
            font-weight: 500;
            color: #495057;
            margin-bottom: 1rem;
        }

        /* Bouton pour modifier avec un effet élégant */
        .btn {
            font-size: 0.9rem;
            padding: 0.6rem 1.2rem;
            text-transform: uppercase;
            border-radius: 25px; /* Coins arrondis pour le bouton */
            background-color: #343a40;
            color: white;
            font-weight: bold;
            border: none;
            transition: all 0.3s ease;
            margin-top: 1rem;
            text-align: center;
        }

        /* Animation de survol pour le bouton */
        .btn:hover {
            background-color: #495057;
            transform: scale(1.05);
        }

        /* Configuration de la grille pour une présentation fluide */
        .row-cols-1, .row-cols-md-3 {
            display: grid;
            grid-template-columns: repeat(3, 1fr);
            gap: 2rem; /* Espacement entre les cartes */
        }

        /* Pour les petits écrans */
        @media (max-width: 768px) {
            .row-cols-1, .row-cols-md-3 {
                grid-template-columns: 1fr;
            }
        }

        /* Section de pagination */
        .navigation {
            margin-top: 2rem;
            text-align: center;
        }

        .text-primary {
            color: #090706 !important;
        }
    </style>
{% endblock %}


{% block body %}
<div class="container py-5">
    <h1 class="text-center text-primary mb-5">Liste des Mannequins</h1>

    <div class="d-flex justify-content-between align-items-center mb-5">
        <a href="{{ path('admin_defiles') }}" class="btn btn-outline-primary btn-lg">
            <i class="fas fa-plus-circle me-2"></i> Ajouter un mannequin
        </a>
    </div>
     <div class="row row-cols-1 row-cols-md-9 row-cols-lg-3 g-4">
         {% for lemannequin in lesmannequins %}
            <div class="col">
                <div class="card shadow-lg border-0 rounded-4">
                    <div class="card-body">
                        <h5 class="card-title">{{lemannequin.Nom}} - {{lemannequin.Prenom}} </h5>
                        <p class="card-text">
                            <strong>Nationalité:</strong> {{ lemannequin.Nationalite }}<br>
                            <strong>Biographie:</strong> {{ lemannequin.biographieM }}
                        </p>
                        <div class="d-flex justify-content-between">
                            <a href="{{ path('admin_defile_modif', {'id': lemannequin.id}) }}" class="btn btn-warning btn-sm">
                                <i class="fas fa-pen"></i> Modifier
                            </a>
                        </div>
                    </div>
                </div>
            </div>
            {% endfor %}
    </tbody>

    <!-- Pagination -->
    <div class="navigation mx-auto">
        {{ knp_pagination_render(lesmannequins) }}
    </div>
</div>
{% endblock %}

{% block javascript %}
    {% include "include/_modale.html.twig" %}
{% endblock %}