/* Style de base du body */
body {
    margin: 0;
    font-family: 'Roboto', sans-serif;
    background-color: #f4f4f4;
    color: #333;
}

/* Titre de la page */
.title {
    text-align: center;
    background: linear-gradient(135deg, #f3f1e7, #e9d8b8);
    padding: 60px 20px;
    border-bottom: 3px solid #b2a98b;
}

.title h1 {
    font-family: 'Playfair Display', serif;
    font-size: 3.5rem;
    color: #6b4f2d;
    letter-spacing: 2px;
}

.title p {
    font-size: 1.5rem;
    color: #666;
}

/* Bouton Ajouter */
.add-button-container {
    text-align: center;
    margin: 20px 0;
}

.add-button {
    background-color: #6b4f2d;
    color: white;
    padding: 12px 25px;
    border-radius: 25px;
    font-size: 1.1rem;
    text-decoration: none;
    box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
    transition: transform 0.3s ease, box-shadow 0.3s ease;
}

.add-button:hover {
    background-color: #4e3722;
    box-shadow: 0 6px 12px rgba(0, 0, 0, 0.2);
    transform: translateY(-2px);
}

/* Container des cartes */
.blog-container {
    display: flex;
    flex-wrap: wrap;
    gap: 30px;
    justify-content: center;
    padding: 40px 20px;
}

/* Carte individuelle */
