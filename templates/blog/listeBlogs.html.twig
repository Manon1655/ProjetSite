    background: #fff;
    border-radius: 20px;
    box-shadow: 0 12px 24px rgba(0, 0, 0, 0.1);
    overflow: hidden;
    width: 340px;
    display: flex;
    flex-direction: column;
    height: auto; /* Ajuster la hauteur de la carte pour accueillir tout le contenu */
    transition: transform 0.3s ease, box-shadow 0.3s ease;
    cursor: pointer;
}

.blog-card:hover {
    transform: translateY(-8px);
    box-shadow: 0 16px 30px rgba(0, 0, 0, 0.15);
}

/* Contenu de la carte */
.blog-card-content {
    padding: 30px;
    flex-grow: 1;
    height: auto;
}

.blog-card-content h3 {
    font-size: 1.8rem;
    color: #6b4f2d;
    margin-bottom: 15px;
    font-family: 'Playfair Display', serif;
    font-weight: 600;
    letter-spacing: 1px;
}

.blog-card-content p {
    font-size: 1.1rem;
    color: #555;
    line-height: 1.7;
    margin-bottom: 20px;
    text-align: justify;
    max-height: none; /* Enlever la hauteur maximale pour afficher tout le texte */
    overflow: visible; /* Permet à tout le texte de s'afficher */
    white-space: normal; /* Afficher tout le texte sans restriction */
}

/* Image de la carte */
.card-img-container img {
    width: 100%;
    height: 200px;
    object-fit: cover;
    border-top-left-radius: 20px;
    border-top-right-radius: 20px;
    transition: transform 0.3s ease;
}

.blog-card:hover .card-img-container img {
    transform: scale(1.05);
}

/* Meta de la carte (date et cœur) */
.blog-meta {
    display: flex;
    justify-content: space-between;
    align-items: center;
    margin-bottom: 15px;
}

.blog-meta .blog-date {
    font-size: 1rem;
    color: #888;
}

.heart-button {
    font-size: 1.8rem;
    cursor: pointer;
    color: #ccc;
    transition: color 0.3s ease;
}

.heart-button.liked {
