}

/* Style du contenu de la carte d'article */
.blog-card-content {
    padding: 15px;
}

/* Titre dans la carte d'article */
.blog-card-content h3 {
    font-size: 18px;
    color: #333;
    margin-bottom: 10px;
    font-weight: 600;
    letter-spacing: 1px;
}

/* Texte dans la carte d'article */
.blog-card-content p {
    font-size: 14px;
    color: #555;
    margin-bottom: 10px;
}

/* Lien 'Lire plus' */
.read-more {
    text-decoration: none;
    color: #007bff;
    font-weight: bold;
    transition: color 0.3s ease;
}

.read-more:hover {
    color: #0056b3;
}

/* Section des commentaires sous l'article */
.comments-section {
    border-top: 2px solid #ddd;
    padding: 15px;
    background-color: #f9f9f9;
}

/* Titre des commentaires */
.comments-section h4 {
    font-size: 16px;
    color: #333;
